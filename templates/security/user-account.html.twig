{% extends 'base.html.twig' %}

{% block title %}Le Charnet de Sant√© - Votre compte{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/security/user-account.css') }}" >
{% endblock %}

{% block body %}

    <main>
        <section>
            <h2>Mon Compte</h2>
            <div class="profil-wrapper">
                <div class="profil-picture">
                    <div class="avatar">
                        <img src="{{ asset('img/site/cat-portrait.png') }}" alt="Illustration portrait de chat">
                    </div>
                    <a href="" class="update-info modify">Changer mon avatar</a>
                </div>
                <div class="info-wrapper">
                    <div class="username">
                        <div class="top-info">
                            <h3>Nom d'utilisateur</h3>
                            <a href="" class="update-info modify">Modifier</a>
                        </div>
                        <p>{{ app.user.username }}</p>
                    </div>
                    <div class="email">
                        <div class="top-info">
                            <h3>Adresse e-mail</h3>
                            <a href="" class="update-info modify">Modifier</a>
                        </div>
                        <p>{{ app.user.email }}</p>
                    </div>
                    <div class="password">
                        <div class="top-info">
                            <h3>Mot de passe</h3>
                            <a href="" class="update-info modify">Modifier</a>
                        </div>
                        <p>**********</p>
                    </div>
                </div>
            </div>
            <a href="" class="update-info delete">Supprimer le compte</a>
            <a href="{{ path('user-interface') }}" class="return-btn">Retour</a>
        </section>
    </main>

{% endblock %}