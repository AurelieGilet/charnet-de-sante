{% extends 'base.html.twig' %}

{% block title %}Le Charnet de Sant√© - Inscription{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/form-type.min.css') }}">
{% endblock %}

{% block body %}
<main class="container">

    {% include 'partials/message-modal.html.twig' %}

    <section>
        <h2>Inscription</h2>
        {{ form_start(registrationForm) }}
            <span>Les champs suivis d'un * sont obligatoires</span>
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.username) }}
            {{ form_row(registrationForm.password.first) }}
            {{ form_row(registrationForm.password.second) }}
            {{ form_row(registrationForm.submit) }}
        {{ form_end(registrationForm) }}
    </section>
</main>
{% endblock %}