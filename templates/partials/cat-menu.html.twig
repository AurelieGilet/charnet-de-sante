{% set route_name = app.request.attributes.get('_route') %}

{% block body %}
    <div class="cat-menu">
        <div id="mobile-cat-menu" class="cat-custom-select-wrapper">
            <div class="cat-custom-select">
                <div class="cat-custom-select_trigger"><span>MENU</span>
                    <div class="menu-arrow"></div>
                </div>
            </div>
            <ul class="cat-custom-options">
                <div class="long-line"></div>
                <li {# {% if route_name == 'cat-health' %} class="selected cat-custom-option" {% else %} {% endif %} #} class="cat-custom-option"><a href="">SANTE</a></li>
                <div class="long-line"></div>
                <li {#  {% if route_name == 'cat-healthcare' %} class="selected cat-custom-option" {% else %} {% endif %} #} class="cat-custom-option"><a href="">SOINS</a></li>
                <div class="long-line"></div>
                <li  {% if route_name == 'cat-measures' %} class="selected cat-custom-option" {% else %} {% endif %} class="cat-custom-option"><a href="{{ path('cat-measures', {'id': cat.id}) }}">MESURES</a></li>
                <div class="long-line"></div>
                <li {#  {% if route_name == 'cat-petcare' %} class="selected cat-custom-option" {% else %} {% endif %} #} class="cat-custom-option"><a href="">ENTRETIEN</a></li>
                <div class="long-line"></div>
            </ul>
        </div>
        <div id="desktop-cat-menu">
            <ul class="cat-desktop-options">
                <li {# {% if route_name == 'cat-health' %} class="selected cat-custom-option" {% else %} {% endif %} #} class="cat-custom-option"><a href="">SANTE</a></li>
                <li {#  {% if route_name == 'cat-healthcare' %} class="selected cat-custom-option" {% else %} {% endif %} #} class="cat-custom-option"><a href="">SOINS</a></li>
                <li  {% if route_name == 'cat-measures' %} class="selected cat-custom-option" {% else %} {% endif %} class="cat-custom-option"><a href="{{ path('cat-measures', {'id': cat.id}) }}">MESURES</a></li>
                <li {#  {% if route_name == 'cat-petcare' %} class="selected cat-custom-option" {% else %} {% endif %} #} class="cat-custom-option"><a href="">ENTRETIEN</a></li>
            </ul>
        </div>
    </div>

    <script src="{{ asset('js/partials/cat-menu.js') }}"  type="text/javascript"></script>

{% endblock %}