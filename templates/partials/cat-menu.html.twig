{% set route_name = app.request.attributes.get('_route') %}

{% block body %}
    <div class="cat-menu">
        <div id="mobile-cat-menu" class="cat-custom-select-wrapper">
            <div class="cat-custom-select">
                <div class="cat-custom-select_trigger"><span>MENU</span>
                    <div class="menu-arrow"></div>
                </div>
            </div>
            <ul class="cat-custom-options">
                <div class="long-line"></div>
                <li {% if route_name == 'cat-health' %} class="selected cat-custom-option" {% else %} class="cat-custom-option" {% endif %}>
                    <a href="
                        {{ path('cat-health', {'id': cat.id}) }}
                        ">SANTE
                    </a>
                </li>
                <div class="long-line"></div>
                <li  {% if route_name == 'cat-healthCare' or route_name == 'veterinary-cat-healthCare' %} class="selected cat-custom-option" {% else %} class="cat-custom-option" {% endif %}>
                    <a href="
                        {% if is_granted('ROLE_USER') %}
                            {{ path('cat-healthCare', {'id': cat.id}) }}
                        {% elseif is_granted("ROLE_GUEST") %}
                            {{ path('veterinary-cat-healthCare', {'id': cat.id}) }}
                        {% endif %}
                        ">SOINS
                    </a>
                </li>
                <div class="long-line"></div>
                <li  {% if route_name == 'cat-measures' or route_name == 'veterinary-cat-measures' %} class="selected cat-custom-option" {% else %} class="cat-custom-option" {% endif %}>
                    <a href="
                        {% if is_granted('ROLE_USER') %}
                            {{ path('cat-measures', {'id': cat.id}) }}
                        {% elseif is_granted("ROLE_GUEST") %}
                            {{ path('veterinary-cat-measures', {'id': cat.id}) }}
                        {% endif %}
                        ">MESURES
                    </a>
                </li>
                <div class="long-line"></div>
                <li  {% if route_name == 'cat-petCare' or route_name == 'veterinary-cat-petCare' %} class="selected cat-custom-option" {% else %} class="cat-custom-option" {% endif %}>
                    <a href="
                        {% if is_granted('ROLE_USER') %}
                            {{ path('cat-petCare', {'id': cat.id}) }}
                        {% elseif is_granted("ROLE_GUEST") %}
                            {{ path('veterinary-cat-petCare', {'id': cat.id}) }}
                        {% endif %}
                        ">ENTRETIEN
                    </a>
                </li>
                <div class="long-line"></div>
            </ul>
        </div>
        <div id="desktop-cat-menu">
            <ul class="cat-desktop-options">
                <li {% if route_name == 'cat-health' %} class="selected cat-custom-option" {% else %} class="cat-custom-option" {% endif %}>
                    <a href="
                        {{ path('cat-health', {'id': cat.id}) }}
                        ">SANTE
                    </a>
                </li>
                <li  {% if route_name == 'cat-healthCare' or route_name == 'veterinary-cat-healthCare' %} class="selected cat-custom-option" {% else %} class="cat-custom-option" {% endif %}>
                    <a href="
                        {% if is_granted('ROLE_USER') %}
                            {{ path('cat-healthCare', {'id': cat.id}) }}
                        {% elseif is_granted("ROLE_GUEST") %}
                            {{ path('veterinary-cat-healthCare', {'id': cat.id}) }}
                        {% endif %}
                        ">SOINS
                    </a>
                </li>
                <li  {% if route_name == 'cat-measures' or route_name == 'veterinary-cat-measures' %} class="selected cat-custom-option" {% else %} class="cat-custom-option" {% endif %}>
                    <a href="
                        {% if is_granted('ROLE_USER') %}
                            {{ path('cat-measures', {'id': cat.id}) }}
                        {% elseif is_granted("ROLE_GUEST") %}
                            {{ path('veterinary-cat-measures', {'id': cat.id}) }}
                        {% endif %}
                        ">MESURES
                    </a>
                </li>
                <li  {% if route_name == 'cat-petCare' or route_name == 'veterinary-cat-petCare' %} class="selected cat-custom-option" {% else %} class="cat-custom-option" {% endif %}>
                    <a href="
                        {% if is_granted('ROLE_USER') %}
                            {{ path('cat-petCare', {'id': cat.id}) }}
                        {% elseif is_granted("ROLE_GUEST") %}
                            {{ path('veterinary-cat-petCare', {'id': cat.id}) }}
                        {% endif %}
                        ">ENTRETIEN
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <script src="{{ asset('js/partials/cat-menu.js') }}"  type="text/javascript"></script>

{% endblock %}