{% extends 'base.html.twig' %}

{% block title %}Le Charnet de Santé - Entretien de {{ cat.name }} {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/partials/cat-menu.css') }}" >
    <link rel="stylesheet" href="{{ asset('css/cat-interface/cat-care-pages/cat-care-pages-shared-style.css') }}" >
{% endblock %}

{% block body %}
<main>
    {% include 'partials/cat-menu.html.twig' %} 

    <section>
        <div class="card">
            <div class="card-header">
                <div class="picture">
                    <img {% if cat.picture != null %} src="{{ asset('img/upload/' ~ cat.picture) }}" alt="Photo du chat {{ cat.name }}" class ="cat-picture" {% else %} src="{{ asset('img/site/cat-portrait2.png') }}" alt="Illustration portrait de chat" class="default-cat-picture" {% endif %}>
                </div>
                <div class="cat-name">
                    <h2>{{ cat.name }}</h2>
                    <a href="{{ path('cat-detail', {'id': cat.id}) }}" class="return">Retour à la fiche</a>
                </div>
            </div>
            <div class="card-body">
                <a href="{{ path('cat-feeding', {'id': cat.id}) }}" class="shaker">
                    <div class="card-content card-template">
                        <div class="card-title">
                            <div class="icon">
                                <img src="{{ asset('img/site/feeding.png') }}" alt="Icône de gamelle de nourriture pour chat">
                            </div>
                            <h3>Alimentation</h3>
                        </div>
                        <div class="card-arrow shake">
                            &#11166
                        </div>
                    </div>
                </a>
                <a href="{{ path('cat-grooming', {'id': cat.id}) }}" class="shaker">
                    <div class="card-content card-template">
                        <div class="card-title">
                            <div class="icon">
                                <img src="{{ asset('img/site/grooming.png') }}" alt="Icône de ciseaux, brosse et peigne">
                            </div>
                            <h3>Toilettage</h3>
                        </div>
                        <div class="card-arrow shake">
                            &#11166
                        </div>
                    </div>
                </a>
                <a href="" class="shaker">
                    <div class="card-content card-template">
                        <div class="card-title">
                            <div class="icon">
                                <img src="{{ asset('img/site/claws.png') }}" alt="Icône de patte de chat">
                            </div>
                            <h3>Griffes</h3>
                        </div>
                        <div class="card-arrow shake">
                            &#11166
                        </div>
                    </div>
                </a>
                <a href="" class="shaker">
                    <div class="card-content card-template">
                        <div class="card-title">
                            <div class="icon">
                                <img src="{{ asset('img/site/eyes-ears.png') }}" alt="Icône de flacon de gouttes">
                            </div>
                            <h3>Yeux et Oreilles</h3>
                        </div>
                        <div class="card-arrow shake">
                            &#11166
                        </div>
                    </div>
                </a>
                <a href="" class="shaker">
                    <div class="card-content card-template">
                        <div class="card-title">
                            <div class="icon">
                                <img src="{{ asset('img/site/teeth.png') }}" alt="Icône de dent et brosse à dent">
                            </div>
                            <h3>Dents</h3>
                        </div>
                        <div class="card-arrow shake">
                            &#11166
                        </div>
                    </div>
                </a>
                <a href="" class="shaker">
                    <div class="card-content card-template">
                        <div class="card-title">
                            <div class="icon">
                                <img src="{{ asset('img/site/litterbox.png') }}" alt="Icône de litière pour chat">
                            </div>
                            <h3>Litière</h3>
                        </div>
                        <div class="card-arrow shake">
                            &#11166
                        </div>
                    </div>
                </a>
                <a href="" class="shaker">
                    <div class="card-content card-template">
                        <div class="card-title">
                            <div class="icon">
                                <img src="{{ asset('img/site/notes.png') }}" alt="Icône de carnet de notes">
                            </div>
                            <h3>Notes</h3>
                        </div>
                        <div class="card-arrow shake">
                            &#11166
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </section>
</main>
{% endblock %}
